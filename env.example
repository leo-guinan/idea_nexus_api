# Innovation Nexus - Skippy Agent Configuration

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# SQLite database path (relative to project root)
DB_PATH=./skippy.db

# ChromaDB Configuration
CHROMA_URL=http://localhost:8000
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Mastra Server Configuration
NODE_ENV=development
PORT=4000

# Innovation Nexus Configuration
FOUNDER_EMAIL=founder@innovationnexus.ai
FOUNDER_NOTIFICATION_WEBHOOK=https://your-webhook-url.com/founder-alerts

# Skippy Behavior Configuration
DAILY_REJECTION_TARGET=50
MAX_QUALIFICATION_SCORE=10
MIN_QUALIFICATION_SCORE=-20
MEME_AGGRESSION_LEVEL=9

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here