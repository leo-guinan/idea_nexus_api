# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Connection (for Mastra metadata - optional)
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/mastra

# Mastra Configuration
MASTRA_LOG_LEVEL=info
PORT=4112
NODE_ENV=production

# ChromaDB Configuration (when running separately)
CHROMA_URL=http://localhost:8000

# Database Configuration
DB_PATH=/app/data/skippy.db

# Optional: Additional API Keys for integrations
# ANTHROPIC_API_KEY=your_anthropic_key_here
# COHERE_API_KEY=your_cohere_key_here